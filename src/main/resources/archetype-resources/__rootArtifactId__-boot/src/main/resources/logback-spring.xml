<configuration scan="true">
    <property name="APP" value="${appName}"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.path"/>
    <property name="LOG_HOME" value="/export/Logs/${symbol_dollar}{APP}"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level |KEY: %X{traceId}| %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="DETAIL" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${symbol_dollar}{LOG_HOME}/stdout.log</File>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level |KEY: %X{traceId}| %logger{50} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${symbol_dollar}{LOG_HOME}/${symbol_dollar}{APP}_stdout.log.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${symbol_dollar}{LOG_HOME}/access.log</File>
        <encoder>
            <pattern>%d{yy-MM-dd.HH:mm:ss.SSS};%X{ServiceId};%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${symbol_dollar}{LOG_HOME}/${symbol_dollar}{APP}_access.log.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>
    </appender>
    <appender name="INVOCATION" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${symbol_dollar}{LOG_HOME}/invocation.log</File>
        <encoder>
            <pattern>%d{yy-MM-dd.HH:mm:ss.SSS};%X{ServiceId};%m%n</pattern>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level |KEY: %X{traceId}| %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${symbol_dollar}{LOG_HOME}/invocation.log.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>
    </appender>
    <logger name="ACCESS">
        <appender-ref ref="ACCESS"/>
    </logger>
    <logger name="INVOCATION">
        <appender-ref ref="INVOCATION"/>
    </logger>
    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${symbol_dollar}{LOG_HOME}/error.log</File>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level |KEY: %X{traceId}| %logger{50} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${symbol_dollar}{LOG_HOME}/error.log.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

    </appender>
    <logger name="ACCESS">
        <appender-ref ref="ACCESS"/>
    </logger>
    <logger name="org.springframework" level="error" additivity="true"/>
    <logger name="org.apache.httpclient.wire" level="INFO"/>
    <logger name="org.apache.commons.httpclient" level="INFO"/>
    <logger name="org.apache.zookeeper" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="DETAIL"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ERROR"/>
    </root>
</configuration>

        <!--

        ${symbol_pound}模式符号 - 用途(附加说明);{可选附加选项}(附加选项说明)
        ${symbol_pound}  %c     - 日志名称(通常是构造函数的参数);{数字}("a.b.c" 的名称使用 %c{2} 会输出 "b.c")
        ${symbol_pound}  %C     - 调用者的类名(速度慢,不推荐使用);{数字}(同上)
        ${symbol_pound}  %d     - 日志时间;{SimpleDateFormat所能使用的格式}
        ${symbol_pound}  %F     - 调用者的文件名(速度极慢,不推荐使用)
        ${symbol_pound}  %l     - 调用者的函数名、文件名、行号(速度极其极其慢,不推荐使用)
        ${symbol_pound}  %L     - 调用者的行号(速度极慢,不推荐使用)
        ${symbol_pound}  %m     - 日志
        ${symbol_pound}  %M     - 调用者的函数名(速度极慢,不推荐使用)
        ${symbol_pound}  %n     - 换行符号
        ${symbol_pound}  %p     - 日志优先级别(DEBUG, INFO, WARN, ERROR)
        ${symbol_pound}  %r     - 输出日志所用毫秒数
        ${symbol_pound}  %t     - 调用者的进程名
        ${symbol_pound}  %x     - Used to output the NDC (nested diagnostic context) associated with the thread that generated the logging event.
        ${symbol_pound}  %X     - Used to output the MDC (mapped diagnostic context) associated with the thread that generated the logging event.
        ${symbol_pound}
        ${symbol_pound}模式修饰符 - 对齐 - 最小长度 - 最大长度 - 说明
        ${symbol_pound} %20c        右      20         ~
        ${symbol_pound} %-20c      左       20         ~
        ${symbol_pound} %.30c       ~       ~          30
        ${symbol_pound} %20.30c     右      20         30
        ${symbol_pound} %-20.30c   左       20         30

        -->
